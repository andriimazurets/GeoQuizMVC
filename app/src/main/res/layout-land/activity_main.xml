<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="@dimen/marginHorizontal"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/layer_list_background"
            android:id="@+id/main_text"
            android:text=""
            android:layout_gravity="center_horizontal"
            tools:text="@string/question_australia"
            style="@style/mainTextStyle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="@dimen/defaultPadding">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_true"
                android:layout_marginEnd="@dimen/marginHorizontal"
                android:text="@string/true_button"
                style="@style/buttonStyle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_false"
                android:layout_marginStart="@dimen/marginHorizontal"
                android:text="@string/false_button"
                style="@style/buttonStyle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="@dimen/defaultPadding">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_prev"
                android:layout_marginEnd="@dimen/marginHorizontal"
                android:visibility="gone"
                android:src="@drawable/ic_back_left"
                android:contentDescription="@string/prev_button"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next"
                android:text="@string/next_button"
                android:src="@drawable/ic_next_right"
                android:contentDescription="@string/next_button" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>